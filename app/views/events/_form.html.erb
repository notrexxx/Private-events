<%= form_with(model: event, local: true) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Name" %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date, placeholder: "Date" %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Description" %>

  <div class="actions">
    <%= f.submit %>
<% end %>
